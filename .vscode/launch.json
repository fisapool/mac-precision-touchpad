    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Debug MacTrackpad Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/src/MacTrackpadTest/MacTrackpadTest.csproj",
                "--logger",
                "console;verbosity=detailed"
            ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Debug MacTrackpad Dashboard",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-dashboard",
            "program": "${workspaceFolder}/src/MacTrackpadDashboard/bin/Debug/net6.0/MacTrackpadDashboard.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/MacTrackpadDashboard",
            "console": "internalConsole",
            "stopAtEntry": false
        }
    ],
    "compounds": [
        {
            "name": "Test & Dashboard",
            "configurations": ["Debug MacTrackpad Tests", "Debug MacTrackpad Dashboard"]
        }
    ]
}