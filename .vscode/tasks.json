{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/MacTrackpadTest/MacTrackpadTest.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build-dashboard",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/MacTrackpadDashboard/MacTrackpadDashboard.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run-tests",
            "command": "${workspaceFolder}/src/MacTrackpadTest/RunTests.cmd",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}